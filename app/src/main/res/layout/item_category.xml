<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="category" type="jp.hotdrop.gmapp.model.GoodsCategory" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginStart="@dimen/spacing_small"
            android:clickable="true"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="@dimen/spacing">

                <ImageView
                    android:id="@+id/icon_reorder_category"
                    android:layout_width="@dimen/reorder_icon_width"
                    android:layout_height="@dimen/reorder_icon_height"
                    android:src="@drawable/ic_reorder" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_reorder_category"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:textSize="@dimen/text_large"
                    android:text="@{category.name}" />

                <TextView
                    android:id="@+id/label_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_toRightOf="@id/icon_reorder_category"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:text="@string/label_register_goods_count"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/label_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_toRightOf="@id/label_count"
                    android:text="@{String.valueOf(category.goodsCount)}"
                    android:textSize="@dimen/text_small" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>
