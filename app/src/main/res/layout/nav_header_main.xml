<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="jp.hotdrop.gmapp.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nav_background" />

        <ImageView
            android:id="@+id/img_nav_header_icon"
            android:layout_width="@dimen/drawer_header_icon"
            android:layout_height="@dimen/drawer_header_icon"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_nav_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_nav_header_icon"
            android:layout_marginEnd="@dimen/spacing"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing_small"
            android:textColor="@color/nav_text_color"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:text="@string/nav_app_description" />

    </RelativeLayout>

</layout>
