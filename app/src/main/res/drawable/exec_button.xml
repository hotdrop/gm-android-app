<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- button style -->
    <item android:state_pressed="false" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#1af8ff"
                android:endColor="#0e169a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#696969" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>
    <!-- push button style -->
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#BEBEBE"
                android:endColor="#3a3a3a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#696969" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>
</selector>