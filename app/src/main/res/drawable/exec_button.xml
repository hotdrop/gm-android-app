<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- button style -->
    <item android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/button_disable_start"
                android:endColor="@color/button_disable_end"
                android:angle="@integer/button_angle" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/button_disable_stroke" />
            <corners
                android:radius="@dimen/button_corner" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
            <size
                android:height="@dimen/button_size"
                android:width="@dimen/button_size" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/button_start"
                android:endColor="@color/button_end"
                android:angle="@integer/button_angle" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/button_stroke" />
            <corners
                android:radius="@dimen/button_corner" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
            <size
                android:height="@dimen/button_size"
                android:width="@dimen/button_size" />
        </shape>
    </item>
    <!-- push button style -->
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/button_press_start"
                android:endColor="@color/button_press_end"
                android:angle="@integer/button_angle" />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/button_press_stroke" />
            <corners
                android:radius="@dimen/button_corner" />
            <padding
                android:left="@dimen/button_padding"
                android:top="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:bottom="@dimen/button_padding" />
            <size
                android:height="@dimen/button_size"
                android:width="@dimen/button_size" />
        </shape>
    </item>
</selector>